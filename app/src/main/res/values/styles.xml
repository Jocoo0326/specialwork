<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SpecialWork" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
    </style>

    <style name="Button.BottomAction.Primary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@drawable/button_action</item>
        <item name="cornerRadius">@dimen/dp_8</item>
    </style>

    <style name="ThemeOverlay.MaterialComponents.Dark.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Text.Body1.OnPrimary" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Empty" />

    <style name="Toolbar.Common" parent="@style/Empty">
        <item name="android:id">@id/toolbar</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="android:elevation">@dimen/dp_2</item>
        <item name="navigationIcon">@drawable/svg_arrow_back</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="Text.Body1.Primary" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Text.Body2.Primary" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Text.H5.Primary" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="Button.Action.Primary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:paddingTop">@dimen/dp_6</item>
        <item name="android:paddingBottom">@dimen/dp_6</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:insetTop">0.0dip</item>
        <item name="android:insetBottom">0.0dip</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:backgroundTint">@drawable/button_action</item>
        <item name="cornerRadius">@dimen/dp_6</item>
    </style>

    <style name="SegmentItem.Default" parent="@style/Empty">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="segmentArrow">@null</item>
        <item name="segmentLeftImageWidth">0.0dip</item>
        <item name="segmentLeftTextColor">#ff212121</item>
        <item name="segmentLeftTextSize">14.0sp</item>
        <item name="segmentPaddingBottom">0.0dip</item>
        <item name="segmentPaddingLeft">12.0dip</item>
        <item name="segmentPaddingRight">12.0dip</item>
        <item name="segmentPaddingTop">0.0dip</item>
        <item name="segmentRightImageWidth">0.0dip</item>
        <item name="segmentRightTextColor">#ff757575</item>
        <item name="segmentRightTextGravity">right</item>
        <item name="segmentRightTextSize">14.0sp</item>
    </style>

    <style name="SegmentItem.Common" parent="@style/Empty">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="segmentLeftTextColor">@color/textColorPrimary</item>
        <item name="segmentLeftTextSize">@dimen/sp_16</item>
        <item name="segmentPaddingLeft">@dimen/dp_24</item>
        <item name="segmentPaddingRight">@dimen/dp_24</item>
        <item name="segmentRightTextColor">@color/textColorPrimary</item>
        <item name="segmentRightTextSize">@dimen/sp_16</item>
    </style>

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="Text.Subtitle1.Primary" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
