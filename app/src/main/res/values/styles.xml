<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SpecialWork" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:popupBackground">@android:color/transparent</item>
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:statusBarColor">#ff700000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
    </style>

    <style name="Button.BottomAction.Primary" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@drawable/button_action</item>
        <item name="cornerRadius">@dimen/dp_8</item>
    </style>
</resources>
