<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Core.Progressbar.Circle" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <!--无遮罩效果-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Core.Toolbar.Style" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">#ffffff</item>
        <item name="navigationIcon">@drawable/core_btn_back</item>
    </style>

    <style name="Core.Design.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabIndicator">@drawable/core_tabs_default_indicator</item>
        <item name="tabTextAppearance">@style/Core.TextAppearance.Design.Tab</item>
        <item name="tabInlineLabel">false</item>
        <item name="tabUnboundedRipple">false</item>
        <item name="tabIndicatorColor">#e52f27</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>

    </style>

    <style name="Core.TextAppearance.Design.Tab" parent="Base.TextAppearance.AppCompat">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/core_tabs_text_color_selector</item>
    </style>

</resources>